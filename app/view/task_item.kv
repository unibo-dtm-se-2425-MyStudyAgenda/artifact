<TaskItem>:
    size_hint_y: None
    height: "50dp"
    padding: [5, 5]
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: 0, 0, 0, 1
        Line:
            width: 1
            rectangle: (*self.pos, *self.size)

    GridLayout:
        cols: 6
        spacing: 10

        CheckBox:
            active: root.is_completed
            on_active: root.on_checkbox_active(self, self.active)

        Label:
            text: "[b]"+root.description+"[/b]"
            font_size: sp(16)
            markup: True
            valign: "middle"
            halign: "center"
        
        Label:
            text: root.topic
            font_size: sp(16)
            markup: True
            valign: "middle"
            halign: "center"

        Label:
            text: root.priority
            font_size: sp(16)
            color:
                (0, 1, 0, 1) if root.priority == "Low" else \
                (1, 0.65, 0, 1) if root.priority == "Medium" else \
                (1, 0, 0, 1)
        
        Button:
            text: "Schedule"
            font_size: sp(14)
            background_color: 0, 0, 0, 1
            on_release: root.open_schedule_popup()

        Button:
            text: "Delete"
            font_size: sp(14)
            color: 1, 0, 0, 1
            background_color: 0, 0, 0, 1
            on_release: root.delete_task()