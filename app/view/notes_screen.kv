<NotesScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        NavigationBar:

        BoxLayout:
            orientation: "vertical"
            padding: 10
            spacing: 10

            Button:
                text: "Create new note"
                size_hint_y: None
                height: "40dp"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                color: 1, 1, 1, 1
                on_release: root.open_new_note_popup()

            ScrollView:
                do_scroll_x: False
                do_scroll_y: True

                GridLayout:
                    id: notes_list
                    cols: 1
                    size_hint_y: None
                    size_hint_x: 1
                    height: self.minimum_height
                    spacing: 10
                    padding: 5

<SpinnerOption>:
    background_normal: ""
    background_color: 0.49, 0.71, 0.84, 1

<AddNotePopup@Popup>:
    title: "Create New Note"
    title_color: 0, 0, 0, 1
    title_align: "center"
    size_hint: .9, .6
    auto_dismiss: True
    background_color: 1, 1, 1, 1
    background: ""

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        TextInput:
            id: title_input
            hint_text: "Title"
            multiline: False
            foreground_color: 0, 0, 0, 1
            background_color: 1, 1, 1, 1

        BoxLayout:
            spacing: 5
            Spinner:
                id: topic_spinner
                text: "Select topic"
                values: []
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
            Button:
                text: "+"
                size_hint_x: None
                width: "40dp"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.add_new_topic()

        BoxLayout:
            size_hint_y: None
            height: '44dp'
            spacing: 10

            Button:
                text: "Cancel"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.dismiss()

            Button:
                text: "Create"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.create_note()


<NotebookScreen>:
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        TextInput:
            id: content_input
            multiline: True
            foreground_color: 0, 0, 0, 1
            background_color: 1, 1, 1, 1

        BoxLayout:
            size_hint_y: None
            height: "40dp"
            spacing: 10
            Button:
                text: "Save"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.save_note()
            Button:
                text: "Back"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.go_back()
