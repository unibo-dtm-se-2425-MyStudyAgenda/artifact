<AddNotePopup@Popup>:
    title: "Create New Note"
    title_color: 0, 0, 0, 1
    title_align: "center"
    size_hint: .9, .6
    auto_dismiss: True
    background_color: 1, 1, 1, 1
    background: ""

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        TextInput:
            id: title_input
            hint_text: "Title"
            multiline: False
            foreground_color: 0, 0, 0, 1
            background_color: 1, 1, 1, 1

        BoxLayout:
            spacing: 5
            Spinner:
                id: topic_spinner
                text: "Select topic"
                values: []
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
            Button:
                text: "+"
                size_hint_x: None
                width: "40dp"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.add_new_topic()
        
        Label:
            id: error_label
            text: ""
            color: 1, 0, 0, 1
            size_hint_y: None
            height: "20dp"

        BoxLayout:
            size_hint_y: None
            height: '44dp'
            spacing: 10

            Button:
                text: "Cancel"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.dismiss()

            Button:
                text: "Create"
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
                on_release: root.create_note()
