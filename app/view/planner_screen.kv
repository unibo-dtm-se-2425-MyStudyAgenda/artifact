<PlannerScreen>:
    hour_px: 50
    header_h: 40

    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 10
        NavigationBar:

        BoxLayout:
            size_hint_y: None
            height: "50dp"
            spacing: 20
            Button:
                text: "<"
                on_release: root.previous_week()
            Label:
                id: month_label
                text: "Month Year"
                font_size: 20
                bold: True
                halign: "center"
            Button:
                text: ">"
                on_release: root.next_week()

        ScrollView:
            do_scroll_x: True
            do_scroll_y: True

            GridLayout:
                id: planner_grid
                cols: 8
                size_hint: None, None
                col_default_width: 210
                col_force_default: True
                width: self.col_default_width * self.cols
                height: root.header_h + (root.hour_px * 24)
