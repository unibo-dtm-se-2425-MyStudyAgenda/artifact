<AddTopicPopup@Popup>:
    title: "Add Topic"
    title_color: 0, 0, 0, 1
    title_align: "center"
    size_hint: 0.8, 0.4
    auto_dismiss: True
    background_color: 1, 1, 1, 1
    background: ""

    BoxLayout:
        orientation: "vertical"
        spacing: 10
        padding: 10

        TextInput:
            id: topic_input
            hint_text: "New topic name"
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: "44dp"
            spacing: 10

            Button:
                text: "Cancel"
                on_release: root.dismiss()
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1

            Button:
                text: "Add"
                on_release: root.save_topic()
                background_normal: ""
                background_color: 0.49, 0.71, 0.84, 1
